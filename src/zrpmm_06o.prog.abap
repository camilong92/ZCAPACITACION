MODULE modify_screen OUTPUT.
  LOOP AT SCREEN.
    IF screen-name = 'GWA_SCREEN_0110-POSNR' AND GWA_SCREEN_0110 IS NOT INITIAL.
      screen-input = 0.
    ELSE.
      screen-input = 1.

    ENDIF.

  ENDLOOP.
ENDMODULE.
